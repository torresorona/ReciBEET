<form class="create-form m-5 text-center">
    <div class="form-group m-5 text-center">
        <h2 for="recipeName">Recipe Name:</h2><br>
        <input type="name" class="form-control-lg text-center w-75 border-primary bg-light" id="inputRecipeName"
            placeholder="Enter Your Recipe's Name">
    </div><br>
    <div class="row m-5 mt-3">
        <div class="controls col-4" id="profs"> 
            <div id="field">
            <h2>Ingredients:</h2>
            <input autocomplete="off" class="ingredient input form-control border-primary bg-light" id="field1" name="prof1" type="text" placeholder="INGREDIENT" data-items="8"/>
