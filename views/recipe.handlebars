    <div>
        <div class="card text-center m-5 border-0">
            <div class="mt-3">
                <img src="{{image}}" style="max-width: 25rem;" class="card-img-top img-fluid" alt="{{recipeName}}">
            </div>
            <div class="card-body">
                <h5 class="card-title" id="recipe-name">{{recipeName}}</h5>
            </div>
            <ul class="list-group list-group-flush">
                <h5 class="p-2 headers">Ingredients:</h5>

                <ol class="list-group-item">

                    {{#each recipes as | recipe |}}
                    <p>{{ingredients}}</p>
                    {{/each}}
                </ol>
                <h5 class="mt-4 headers">Instructions:</h5>
                <p class="list-group-item mb-3">{{instructions}}</p>
            </ul>
            <div class="card-body p-3">
                <a href="/findrecipe" class="btn btn-outline-primary profile-button">Find a Recipe</a>
                <a href="/createRecipe" class="btn btn-outline-danger profile-button">Create a Recipe</a>
            </div>
        </div>
    </div>    


