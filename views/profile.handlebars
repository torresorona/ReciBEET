    <div class="row">
        <div class="col-sm-6">
          <div class="card border-0">
            <div class="card-body">
              <h5 class="card-title text-center mt-3">Saved Recipes</h5>
                <div class="row">

                    <div class="list-group text-center p-5">
                        
                        {{#each savedrecipes as | recipe |}} 
                        <a href="/recipe/{{recipe.recipeId}}" class="list-group-item list-group-item-success">{{recipe.recipeName}}</a>
                        {{/each}}
                        
                    </div>
                    
                </div>

                <div class="text-center">
                    <a href="/findrecipe" class="btn btn-outline-dark profile-button">Find a Recipe</a>
                </div>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
            <div class="card border-0">
            <div class="card-body">
                <h5 class="card-title text-center mt-3">Your Created Recipes</h5>
                <div class="row">

                <div class="list-group text-center p-5 d-flex flex-column align-items-center w-100">
                        
                    {{#each createdrecipes as | recipe |}} 
                    <div class="d-flex flex-row w-100">
                        <a href="/recipe/{{recipe.id}}" class="w-75 list-group-item list-group-item-success">{{recipe.recipeName}}</a>
                        <button class="w-25 delete-recipe-btn" data-recipe-id="{{recipe.id}}">X</button>
                    </div>
                    {{/each}}
                    
                </div>
                    
                </div>

                <div class="text-center">
                <a href="/createRecipe" class="btn btn-outline-dark profile-button">Create a Recipe</a>
                </div> 

            </div>  
            </div>
        </div>
        
    </div>

<script src="/js/deleteRecipe.js"></script>